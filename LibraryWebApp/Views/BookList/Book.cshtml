@using BibliotekaWeb.Models
@using LibraryWeb.Models

@model Reservation

<form method="post" asp-action="Book">
    <div class="pt-3 mt-4">
        <div class="row pb-2">
            
            <h2 class="text-primary">Do you want book this book?</h2>

            <hr />
        </div>       
        <div class="mb-3">
            <label asp-for="BookId"></label>
            <input asp-for="BookId" class="form-control"readonly="">
            
        </div>
        <div class="mb-3">
            <label asp-for="UserId"></label>
            <input asp-for="UserId" class="form-control" readonly="">
           

        </div>
       
        <button type="submit" class="btn btn-success" style="width:150px">Book</button>
        <a asp-controller="BookList" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>



